<h1> List of all tasks </h1>
<ul>
  <% @tasks.each do |task| %>
    <li> <b> <%= link_to task.title, task_path(task)%> </b>
    <%= link_to 'Delete Task', task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} %>
  <% end %>
</ul>

<%= link_to 'Add Tasks', new_task_path %>
